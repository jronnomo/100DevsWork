<h1>Stories</h1>
<div class="row">
    <% if (stories && stories.length > 0) { %>
        <% stories.forEach(story => { %>
            <div class="col s12 m4">
                <div class="card">
                    <div class="card-image">
                        <!-- Use the "unescaped output" syntax of EJS to tell EJS not to escape the HTML output of the editIcon function, but to render it as HTML.     -->
                        <%- locals.helpers.editIcon(story.user, user, story._id) %>
                    </div>
                    <div class="card-content center-align">
                        <h5><%= story.title %></h5>
                        <p><%= story.body %></p>
                        <br>
                        <div class="chip">
                            <img src="<%= story.user.image %>" alt="">
                            <a href="/stories/user/<%= story.user._id %>"><%= story.user.displayName %></a>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <a href="/stories/<%= story._id %>" class="btn grey">Read More</a>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>No stories to display</p>
    <% } %>
</div>